page {
  height: 100%;
  background-image: -webkit-linear-gradient(110deg, #9709F7, #581AE1);
  background-image: linear-gradient(-20deg, #9709F7, #581AE1);
}
.title {
  padding-top: 20rpx;
  padding-left: 30rpx;
  color: #FFFFFF;
  font-size: 36rpx;
}
.desc {
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: red;
  font-size: 35rpx;
}
.list {
  margin-top: 10rpx;
}
.list .item {
    border: 1px solid #C0C0C0;
    background-color: #FFFFFF;
    height: 110rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.list .item .userinfo {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.list .item .userinfo image {
        width: 60rpx;
        height: 60rpx;
        border-radius: 20rpx;
        margin-right: 20rpx;
}
.list .item .userinfo .nickname {
        width: 200rpx;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
}
.list .adver {
    background: #FFFFFF;
    margin-top: 10rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
}
.load-more {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #FFFFFF;
  padding-bottom: 50rpx;
}
.bottom-adv {
  width: 100%;
  position: absolute;
  bottom: 0;
}

