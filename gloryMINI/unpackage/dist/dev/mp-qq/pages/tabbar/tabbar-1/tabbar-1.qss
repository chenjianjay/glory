page {
  background-color: #581AE1;
}
.fixed_head {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 5;
  background-color: rgba(255, 0, 0, 0.7);
  font-size: 35rpx;
  color: white;
  height: 70rpx;
  overflow: hidden;
}
.fixed_head .header-title .header-icon {
    width: 70rpx;
    background: #ce0843;
    position: relative;
    z-index: 9;
}
.fixed_head .header-title .header-icon image {
      width: 60rpx;
      height: 60rpx;
}
.fixed_head .header-title .notice {
    margin-top: -60rpx;
    margin-left: 70rpx;
}
.fixed_head .header-title .notice .notice-msg {
      height: 90rpx;
}
.li-line {
  height: 70rpx;
}
.item {
  width: 690rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  background-color: #302C83;
  color: white;
  overflow: hidden;
  position: relative;
}
.item .hot-icon {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    right: -5rpx;
    top: -10rpx;
}
.item .skim-pic {
    width: 100%;
}
.item .message-box {
    height: 120rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    font-size: 30rpx;
    line-height: 54rpx;
}
.item .message-box .name {
      position: absolute;
      bottom: 129rpx;
      left: 0;
      width: 100%;
      color: white;
      background-color: rgba(0, 0, 0, 0.6);
      padding-left: 30rpx;
      height: 80rpx;
      line-height: 80rpx;
      font-size: 38rpx;
}
.item .goPage-btn {
    background-color: red;
    color: white;
    height: 70rpx;
    position: absolute;
    right: 10rpx;
    bottom: 20rpx;
}
.li:last-child {
  margin-bottom: 0;
  padding-bottom: 50rpx;
}

