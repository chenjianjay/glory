.card {
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  width: 690rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #302C83;
  margin-bottom: 20rpx;
  position: relative;
}
.card-1 image {
  width: 690rpx;
}
.card-1 .message-box {
  height: 115rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 31rpx;
  line-height: 50rpx;
  color: #FFFFFF;
  text-align: right;
}
.card-1 .message-box .name {
    position: absolute;
    text-align: left;
    bottom: 120rpx;
    left: 0;
    width: 100%;
    color: white;
    background-color: rgba(0, 0, 0, 0.6);
    padding-left: 30rpx;
    height: 70rpx;
    line-height: 70rpx;
}
.card-1 .message-box .tip {
    color: red;
}
.card-2 {
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.card-2 .join-btn {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background-color: #E25A30;
    color: #FFFFFF;
    text-align: center;
    line-height: 200rpx;
    -webkit-animation: free_download 1s linear alternate infinite;
    animation: free_download 1s linear alternate infinite;
}
@-webkit-keyframes free_download {
0% {
    -webkit-transform: scale(0.9);
}
100% {
    -webkit-transform: scale(1);
}
}
@keyframes free_download {
0% {
    -webkit-transform: scale(0.9);
            transform: scale(0.9);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
.card-2 .remain {
    font-size: 30rpx;
    color: yellow;
    margin-top: 20rpx;
}
.card-2 .get-all {
    font-size: 31rpx;
    text-align: center;
    color: #FFFFFF;
    margin-top: 40rpx;
}
.card-2 .get-all .get-btn {
      border-bottom: 1px solid red;
      color: red;
}
.card-2 .number-box-list {
    margin-top: 45rpx;
    margin-left: 90rpx;
    margin-right: 90rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
            flex-direction: row;
    -webkit-box-pack: start;
    -webkit-justify-content: start;
            justify-content: start;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.card-2 .number-box-list image {
      width: 65rpx;
      height: 65rpx;
      border-radius: 20rpx;
      margin-right: 10rpx;
      margin-bottom: 10rpx;
}
